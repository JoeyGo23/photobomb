<div class="container">

<h1><i class="fa fa-camera-retro"></i>  PhotoBomb</h1>
<h3>Share photos. Share inspiration.</h3>

<h2 class="forgot">Forgot your password?</h2>

<p>Don't worry, we're not judging you. Just enter your email, and we'll help you out.</p>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>

  <div>
  <%= f.email_field :email, :autofocus => true %><br />
  <%= f.label :email %>
</div>

  <div class="submit"><%= f.submit "Help Me" %></div>
<% end %>

<%= render "devise/shared/links" %>

</div>
